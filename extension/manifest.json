{
  "manifest_version": 3,
  "name": "Full Page Snapshot & Annotator",
  "version": "1.0.0",
  "description": "Capture full-page snapshots, annotate with rectangles, batch-apply coordinate actions, and save locally.",
  "permissions": ["scripting", "activeTab", "tabs", "storage", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Capture full page",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 